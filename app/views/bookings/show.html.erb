<div class="authform">

<!--Booking Record Info-->

  <p><strong><%= t('customer') %>: </strong><%= @booking.user.name %></p>
    <p>
      <strong><%= t('order_time') %>: </strong><%= @booking.order_datetime.strftime("%d/%m/%Y - %l:00 %p") %>
    </p>
    <p><strong><%= t('hours') %>: </strong><%= @booking.hours %> hours</p>
    <p><strong><%= t('hospital') %>: </strong><%= @booking.hospital %></p>
    <p><strong><%= t('location') %>: </strong><%= @booking.location %></p>
    <% if current_user.admin? or current_user.customer? %>
      <p><strong><%= t('fee') %>: </strong><%= number_to_currency(@booking.fee, precision: 0) %></p>
    <% end %>
    <% if current_user.admin? or current_user.partner? %>
      <p><strong><%= t('cost') %>: </strong><%= number_to_currency(@booking.cost, precision: 0) %></p>
    <% end %>
    <p><strong><%= t('contact') %>: </strong><%= @booking.contact_person %></p>
    <p><strong><%= t('phone_no') %>: </strong><%= @booking.contact_phone_no %></p>
    <p><strong><%= t('preferred_language') %>: </strong><%= @booking.preferred_language %></p>

    <% if @booking.nurse %>
      <p> <strong><%= t('nurse') %>: </strong><%= @booking.nurse.name %></p>
      <div><%= image_tag @booking.nurse.image, size: "200x200", class: "img-responsive img-thumbnail img-circle" %></div>
      <p></p>
    <% end %>
  
    <p><strong><%= t('status') %>: </strong><%= t_enum(@booking, :status) %></p>
    <% if current_user.admin? %>
      <p> <strong>Stripe Token: </strong><%= @booking.payment_token %> </p>
    <% end %>
      <p> <strong><%= t('payment') %>: </strong><%= t_enum(@booking, :payment) %> </p>

    <br>
  
<!--Booking Record Info-->
  
<div class="btn-group inline"> 
  <% if current_user.customer? %>
    <% if @booking.Open? or @booking.Matched?%>
      <span><%= link_to t('cancel'), cancel_booking_path(@booking), method: :put, class: "btn btn-success"  %>  </span>
    <% end %>
  <% elsif current_user.partner? %>
      <% if @booking.Open? %>
  <span><%= link_to t('engage'), engage_booking_path(@booking), method: :put, class: "btn btn-success"  %> </span>
      <% elsif @booking.Matched? %>
  <span><%= link_to t('disengage'), disengage_booking_path(@booking), method: :put, class: "btn btn-success"  %>  </span> 
      <% end %>
  <% elsif current_user.admin? %>
    <% if @booking.Open? or @booking.Matched?%>
      <span><%= link_to t('cancel'), cancel_booking_path(@booking), method: :put, class: "btn btn-success"  %>  </span>
      <span><%= link_to t('reject'), reject_booking_path(@booking), method: :put, class: "btn btn-success"  %>  </span>
  <span><%= link_to t('expire'), expire_booking_path(@booking), method: :put, class: "btn btn-success"  %>  </span>
    <% end %>
  <% end %>
  