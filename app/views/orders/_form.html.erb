<%= simple_form_for(@order, :html => {:multipart => true}) do |f| %>
  <%= f.error_notification %>
    
    <p>  <strong><%= t("call_date") %>:</strong>  <%= Date.today %></p>
    <p>  <strong><%#= t("status") %> </strong>  <%#= t(@order.status)  %></p>
    <br>

  <div class="form-inputs">
        
    <% if I18n.locale == :zh %>
      <%= f.association :store, :label => t("store"), :label_method => :chi_store_name %> 
    <% else %>
      <%= f.association :store, :label => t("store"), :label_method => :store_name %> 
    <% end %>
    
    <%= f.input :call_date, :as => :hidden, :label => t("call_date") %>
    
    <br>
    <%= f.input :user_ref, :label => t("client_ref") %>
    <%= f.input :repair_date, :label => t("repair_date") %>
    
    <%= f.input :status, collection: Order.i18n_statuses %>
    
    <%= f.association :technician, :label => t("technician"), :as => :collection_select %>
    
    <% if I18n.locale == :zh %>
      <%= f.association :device, :label => t("device"), :label_method => :chi_name %>
      <%= f.association :issue, :label => t("issue"), :label_method => :chi_name %>
      <%= f.input :notes, :label => t("notes") %>
      <%= f.association :work, :label => t("work"), :label_method => :chi_name %>   
    <% else %>
      <%= f.association :device, :label => t("device"), :label_method => :name %>
      <%= f.association :issue, :label => t("issue"), :label_method => :name %>
      <%= f.input :user_ref, :label => t("client_ref") %>
      <%= f.association :work, :label => t("work"), :label_method => :name %>
    <% end %>

    <div>
      <%= f.button :submit, :class => 'btn btn-tall btn-info col-xs-4' %>
    </div><br><br><br><br>
    
    <p><%= t("maintenance_photo") %></p><%= f.file_field :image_01  %>
    <% if (@order.image_01? ) %>
      <br><%= image_tag @order.image_01.url %>
    <% end %>
    
    <br><p><%= t("maintenance_photo") %></p><%= f.file_field :image_02  %>
